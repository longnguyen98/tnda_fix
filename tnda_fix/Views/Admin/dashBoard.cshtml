
@{
    ViewBag.Title = "dashBoard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    var glv1;
    $(document).ready(function () {
        $.LoadingOverlay("show");
        $.ajax({
            url: "/dashboard/countGLV",
            success: function (result) {
                console.log(result);
                new Vue({
                    el: '#vue_app',
                    data: {
                        glv: result,
                        glv1: result
                    }
                });
            }
        });
        $.ajax({
            url: "/dashboard/countTN",
            success: function (result) {
                console.log(result);
                new Vue({
                    el: '#tn_count',
                    data: {
                        tn: result
                    }
                });
                $.LoadingOverlay("hide");
            }
        });
    });
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        
        var dataGLV = google.visualization.arrayToDataTable([
          ['Task', 'person'],
          ['Thêm sức', 11],
          ['Other', 2],
          ['Sống đạo', 2],
          ['Rước lễ', 20],
          ['Khai tâm', 7]
        ]);

        var option = {
            title: 'Giáo lý viên'
        };
        var dataTN = google.visualization.arrayToDataTable([
                  ['Task', 'person'],
                  ['Thêm sức', 11],
                  ['Other', 2],
                  ['Sống đạo', 2],
                  ['Rước lễ', 12],
                  ['Khai tâm', 7]
        ]);
        var option1 = {
            title: 'Thiếu nhi'
        }
        var chart = new google.visualization.PieChart(document.getElementById('piechart'));
        var chart1 = new google.visualization.PieChart(document.getElementById('piechart1'));
        chart.draw(dataGLV, option);
        chart1.draw(dataTN, option1);
    }
</script>
<div>
    <h2>THỐNG KÊ</h2>
    <div class="card-body row d-flex justify-content-center">
         <div id="piechart" style="width: 600px; height: 400px;"></div>
        <div id="piechart1" style="width: 600px; height: 400px;"></div>
    </div>
    <div class="col-lg-12" id="vue_app">
        <div class="card d-flex">
            <div class="card-body row d-flex justify-content-center">
                <div class="col-lg-2 col-sm-6 mb-2">
                    <h3>GLV</h3>
                    <h6>{{glv.total}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Khai tâm</h5>
                    <h6>{{glv.KT}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Rước lễ</h5>
                    <h6>{{glv.RL}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Thêm sức</h5>
                    <h6>{{glv.TS}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Sống đạo</h5>
                    <h6>{{glv.SD}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Chưa xếp lớp</h5>
                    <h6>{{glv.other}}</h6>
                </div>
            </div>
        </div>
    </div>
    <br />
    <div class="col-lg-12" id="tn_count">
        <div class="card d-flex">
            <div class="card-body row d-flex justify-content-center">
                <div class="col-lg-2 col-sm-6 mb-2">
                    <h3>Thiếu nhi</h3>
                    <h6>{{tn.total}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Khai tâm</h5>
                    <h6>{{tn.KT}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Rước lễ</h5>
                    <h6>{{tn.RL}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Thêm sức</h5>
                    <h6>{{tn.TS}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Sống đạo</h5>
                    <h6>{{tn.SD}}</h6>
                </div>
                <div class="col-lg-2">
                    <h5>Chưa xếp lớp</h5>
                    <h6>{{tn.other}}</h6>
                </div>
            </div>
        </div>
    </div>
</div>

